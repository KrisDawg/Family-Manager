BEGIN TRANSACTION;
CREATE TABLE bills (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            name TEXT NOT NULL,
            amount REAL NOT NULL,
            due_date TEXT,
            category TEXT,
            paid BOOLEAN DEFAULT 0
        );
