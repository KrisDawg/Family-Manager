CREATE TABLE calendar_events (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            date TEXT NOT NULL,
            type TEXT,
            description TEXT
        );
CREATE TABLE inventory (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            name TEXT NOT NULL,
            category TEXT,
            qty REAL NOT NULL,
            unit TEXT,
            exp_date TEXT,
            location TEXT
        );
INSERT INTO "inventory" VALUES(2,'Milk','Dairy',2.0,'-','2026-01-12','Kitchen - Fridge');
INSERT INTO "inventory" VALUES(3,'asd','asd',1.0,'1','2026-01-12','asd');
CREATE TABLE meals (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            date TEXT NOT NULL,
            meal_type TEXT,
            name TEXT NOT NULL,
            ingredients TEXT,  -- JSON string
            recipe TEXT
        );
CREATE TABLE shopping_list (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            item TEXT NOT NULL,
            qty REAL,
            checked BOOLEAN DEFAULT 0
        , price REAL DEFAULT 0);
